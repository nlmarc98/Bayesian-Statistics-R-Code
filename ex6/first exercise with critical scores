#1.2.
N=45
z=3
theta=1/6


NBinomial <- function (z,N,theta){
  np<- z/N*p_value_bin(z,N,theta)
  return(np)
}

pValue<-0

for(N in 0:45){
  print(N)
  print(pValue)
  pValue <- pValue+NBinomial(z,N, theta)}

pValue

