#1.1
N=45
z=3
theta=1/6

p_value_bin <- function (z, N, theta){
  p<-choose(N, z) * theta^z*(1-theta)^(N-z)
  return (p)
}

pValue<-0

for(z in 0:45){
  print(z)
  print(pValue)
  pValue <- pValue+p_value_bin(z,N, theta)}


